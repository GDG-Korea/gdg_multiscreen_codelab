<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gdgkoreaandroid.multiscreencodelab" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <!--activities for mobile-->
        <activity
            android:name=".MovieListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.Overlay" >
            <intent-filter>
                <action android:name="com.gdgkoreandroid.multiscreencodelab.play" />
                <action android:name="com.gdgkoreandroid.multiscreencodelab.pause" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetailActivity"
            android:label="@string/title_movie_detail"
            android:parentActivityName=".MovieListActivity"
            android:theme="@style/AppTheme" >
        <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MovieListActivity" />
        </activity>

        <!--activities for tv-->
        <activity
            android:name=".tv.TvMovieBrowseActivity"
            android:label="@string/title_activity_my">
        </activity>
        <activity android:name=".tv.TvMovieDetailsActivity"/>
        <activity android:name=".tv.TvPlayerActivity"
            android:theme="@style/AppTheme.FullScreen"/>

        <!--metadata-->
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>



</manifest>
